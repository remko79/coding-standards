<?xml version="1.0"?>
<ruleset name="Drupal Coding Standards">
  <description>Drupal coding standards</description>

  <exclude-pattern>/vendor/*</exclude-pattern>
  <exclude-pattern>/core/*</exclude-pattern>

  <!-- This is the rule we inherit from. If you want to exlude some specific rules, see the docs on how to do that -->
  <rule ref="../../drupal/coder/coder_sniffer/Drupal"/>

  <!-- Lines can be a little bit longer before they break the build -->
  <rule ref="Generic.Files.LineLength">
    <properties>
      <property name="lineLimit" value="120"/>
      <property name="absoluteLineLimit" value="180"/>
    </properties>
  </rule>
</ruleset>
